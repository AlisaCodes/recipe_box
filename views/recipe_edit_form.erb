<div class="row title-container">
  <div class="large-12 text-center columns ">
    <h2>Edit Recipe</h2>
  </div>
</div>


<form action="/admin/recipes/<%= @recipe.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="row">
    <div class="large-6 text-center columns">
      <label for="dish_name">Name of the Dish:</label>
      <input type="text" name="dish_name" value="<%= @recipe.dish_name %>">
    </div>
    <div class="large-6 text-center columns">
      <label for="pic_link">Add a link to a picture:</label>
      <input type="text" name="pic_link" value="<%= @recipe.pic_link %>">
    </div>
  </div>

  <div class="row">
    <div class="large-12 text-center columns">
      <label for="instructions">Instructions:</label>
      <textarea type="text" cols="10" name="instructions" value="<%= @recipe.instructions %>"> </textarea>


      <label for="ingredients">Pick Ingredients:</label>
      <input type="text" required name="ingredients" value="<%= @ingredients %>">

      <label for="category">Name of categories:</label>
      <input type="text" name="category" value="<%= @categories %>">

      <label for="rating">Change rating:</label>
      <input type="text" name="rating" value="<%= @recipe.rating %>">

      <label>Publish?</label>
      <input type="radio" name="published" value="t" id="published-true"><label for="published-true">Yes</label>
      <input type="radio" name="published" value="f" id="published-false"><label for="published-false">No</label><br>

      <button class="round" type="submit">Confirm edits</button>
    </div>
  </div>
</form>
